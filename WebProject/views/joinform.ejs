   <body>
      <header>
         <div id="header">
               <div class="row text-center">
                        <span style="color:white; font-size:4em;" class="logo">#Sell Phone</span>
                  </div>
               </div>
      </header>

      <nav id="navigation">
      </nav>


  <form action="/joinform" method="post" onsubmit="return onWriteSubmit()">
            <div class="row out">
               <div class="in">
                  <!-- Billing Details -->
                  <div class="billing-details">
                     <div class="section-title">
                     </div>
                     <div class="form-group">
                        <input class="input" type="text" name="customer_id" id="customer_id" placeholder="아이디" required/>
                     </div>

                     <div class="form-group">
                        <input class="input" type="password" name="customer_pw" id="customer_pw" placeholder="비밀번호" required/>
                     </div>
                     <div class="form-group">
                        <input class="input" type="password" name="" placeholder="비밀번호 재확인"/>
                     </div>

                     <div class="form-group">
                        <input class="input" type="text" name="customer_email" id="customer_email" placeholder="이메일" required/>
                     </div>

                     <div class="form-group">
                        <input class="input" type="text" name="customer_name" id="customer_name" placeholder="이름" required/>
                     </div>
                     <div class="form-group">
                        <input class="input" type="text" name="customer_address" id="customer_address" placeholder="주소" required/>
                     </div>

                     <div class="form-group">
                        <input class="input" type="text" name="customer_phone" id="customer_phone" placeholder="전화번호" required/>
                     </div>

                     <div class="form-group">
                        <select class="input" type="text" name="sex" placeholder="성별" required>
                           <option value selected>성별</option>
                           <option value="M">남자</option>
                           <option value="F">여자</option> </select>
                     </div>

                     <div class="product-details">
                        <div class="add-to-cart">
                           <button  type="submit" class="add-to-cart-btn"><i class="fa fa-check"></i>확인</button>
                        </div>
                     </div>

                  </div>

         </div>
      </div>
   </form>

      <footer id="footer">
         <div id="bottom-footer" class="section">
            <div class="container">
               <div class="row">
                  <div class="col-md-12 text-center">
                     <span class="copyright">
