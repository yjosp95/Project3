                        Copyright &copy HnB
                     <!-- Link back to Colorlib can't be removed. Template is licensed under CC BY 3.0. -->
                     </span>
                  </div>
               </div>
            </div>
         </div>
      </footer>

      <script src="js/jquery.min.js"></script>
      <script src="js/bootstrap.min.js"></script>
      <script src="js/slick.min.js"></script>
      <script src="js/nouislider.min.js"></script>
      <script src="js/jquery.zoom.min.js"></script>
      <script src="js/main.js"></script>


      <script>
            function onWriteSubmit(){
                  if ( $("#customer_id").val().trim() == "" ){
                        var message = "아이디를 입력해주세요";
                        $("#customer_id").val("");
                        $("#customer_id").focus();
                        alert(message);
                        return false;
                  }

                  if ( $("#customer_pw").val().trim() == "" ){
                        var message = "비밀번호를 입력해주세요";
                        $("#customer_pw").val("");
                        $("#customer_pw").focus();
                        alert(message);
                        return false;
                  }

                  if ( $("#customer_email").val().trim() == "" ){
                        var message = "이메일을 입력해주세요";
                        $("#customer_email").val("");
                        $("#customer_email").focus();
                        alert(message);
                        return false;
                  }

                  if ( $("#customer_name").val().trim() == "" ){
                        var message = "이름을 입력해주세요";
                        $("#customer_name").val("");
                        $("#customer_name").focus();
                        alert(message);
                        return false;
                  }

                  if ( $("#customer_address").val().trim() == "" ){
                        var message = "주소를 입력해주세요";
                        $("#customer_address").val("");
                        $("#customer_address").focus();
                        alert(message);
                        return false;
                  }

                  if ( $("#customer_phone").val().trim() == "" ){
                        var message = "번호를 입력해주세요";
                        $("#customer_phone").val("");
                        $("#customer_phone").focus();
                        alert(message);
                        return false;
                  }
            }

      </script>

   </body>
</html>
